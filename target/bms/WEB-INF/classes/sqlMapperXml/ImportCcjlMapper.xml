		<result column="bz" property="bz" />
	</resultMap>
	
	<select id="selectCcDataList" resultType="hashmap" parameterType="Map">
	    SELECT cc.*,
	           u.name AS user_name
	    FROM bi_import_ccjl cc
	    LEFT JOIN user u ON cc.create_user = u.login_name
	    WHERE 1 = 1
	    <if test="param.carNo != null and param.carNo != ''">
	        AND cc.ch  LIKE CONCAT('%',#{param.carNo},'%')
	    </if>
	    <if test="param.location != null and param.location == 'SQ'">
	        AND cc.ckmc = '森桥'
	    </if>
	    <if test="param.location != null and param.location == 'FD'">
	        AND cc.ckmc = '卡森'
	    </if>
	    <if test="param.dateStart != null and param.dateStart != ''">
	        <![CDATA[ AND cc.ccsj >= #{param.dateStart} ]]>
	    </if>
	    <if test="param.dateEnd != null and param.dateEnd != ''">
	       <![CDATA[ AND cc.ccsj < #{param.dateEnd} ]]> 
	    </if>
	    ORDER BY cc.ccsj DESC
	</select>

</mapper>
